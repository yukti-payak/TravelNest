<% layout("/layouts/boilerplate") %>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap");

  .app-container {
    padding: 1rem;
    margin: auto;
    width: 100%;
    /* This was the main property causing issues on small screens */
    max-width: 30%; 
    text-align: center;
  }

  /* --- Location Controls --- */
  .location-controls {
    background: white;
    padding: 20px;
    border-radius: 16px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    margin-bottom: 25px;
  }

  .location-controls h1 {
    margin: 0 0 15px 0;
    font-size: 1.5em;
    color: var(--text-color);
  }

  .input-group {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
  }

  #location-input {
    flex-grow: 1;
    border: 2px solid #ddd;
    border-radius: 10px;
    padding: 0 15px;
    font-size: 1em;
    transition: border-color 0.3s;
  }

  #location-input:focus {
    outline: none;
    border-color: var(--primary-color);
  }

  .control-button {
    border: none;
    background-color: var(--primary-color);
    color: white;
    padding: 12px 15px;
    border-radius: 10px;
    cursor: pointer;
    font-size: 1em;
    font-weight: 600;
    transition: background-color 0.3s;
  }
  .control-button:hover {
    background-color: #326ac2;
  }

  #use-location-btn {
    width: 100%;
    background-color: #2a2a2a;
  }
  #use-location-btn:hover {
    background-color: #1a1a1a;
  }

  /* --- Snapshot Card --- */
  .snapshot-card {
    width: 100%;
    aspect-ratio: 9/10;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    background-color: #fff;
    background-size: cover;
    background-position: center;
    position: relative;
    overflow: hidden;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-image 0.5s ease-in-out;
    text-align: left;
  }

  .snapshot-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.1) 100%
    );
    z-index: 1;
  }

  .card-content,
  .card-state {
    position: relative;
    z-index: 2;
    padding: 25px;
    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }

  .card-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .loader {
    border: 5px solid rgba(255, 255, 255, 0.3);
    border-top: 5px solid #fff;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .card-content {
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .card-content.visible {
    opacity: 1;
  }

  /* Glassmorphism Effect for Info boxes */
  .glass-panel {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px); /* For Safari */
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .location-header h2 {
    margin: 0;
    font-size: 2.2em;
    line-height: 1.2;
  }

  .weather-info {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 5px 15px;
    margin-top: 10px;
    width: fit-content;
  }

  .weather-info img {
    width: 50px;
    height: 50px;
  }
  .weather-info p {
    margin: 0;
    font-size: 1em;
    font-weight: 600;
  }

  .sightings-section {
    margin-top: 20px;
  }
  .sightings-section h3 {
    margin: 0 0 10px 0;
    font-size: 1.1em;
    padding-bottom: 5px;
  }

  .sightings-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }
  .sighting {
    text-align: center;
  }
  .sighting img {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 12px;
  }
  .sighting p {
    margin: 5px 0 0 0;
    font-size: 0.8em;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* --- RESPONSIVE STYLES --- */
  /* This targets tablets and mobile phones */
  @media (max-width: 768px) {
    .app-container {
      /* Allow the container to be wider on smaller screens */
      max-width: 90%; 
    }

    .location-header h2 {
      font-size: 1.8em; /* Make the main location title smaller */
    }

    .weather-info p {
      font-size: 0.9em; /* Adjust weather text size */
    }
  }

  /* This targets smaller mobile phones for fine-tuning */
  @media (max-width: 480px) {
     .app-container {
        max-width: 95%;
     }

     .location-header h2 {
       font-size: 1.5em; /* Further reduce font size */
     }

     .card-content, .card-state {
        padding: 15px; /* Reduce padding inside the card */
     }

     .sightings-grid {
        gap: 10px; /* Reduce gap between images */
     }
  }
</style>

<div class="app-container">
  <div class="location-controls">
    <h1>Nature Snapshot</h1>
    <div class="input-group">
      <input
        type="text"
        id="location-input"
        placeholder="Enter a city name..."
      />
      <button id="search-btn" class="control-button">üîç</button>
    </div>
    <button id="use-location-btn" class="control-button">
